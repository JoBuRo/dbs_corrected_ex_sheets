Aufgabe 1
---------

CREATE TABLE Abteilung (
	Abnr INTERGER PRIMARY KEY,
	Bezeichnung VARCHAR2(2),
	Budget NUMBER,
	CHECK (Budget >= (SELECT SUM(Angestellte.Gehalt) FROM Angestellte) \\ a
	CHECK ((SELECT AVG(Gehalt) FROM Angestellte)) =< 2000) \\ b 
	AnzAng INTEGER
);

CREATE TABLE Angestellte (
	AngNr INTEGER PRIMARY KEY ,
	Name VARCHAR2 (40) ,
	Gehalt NUMBER ,
	AbNr INTEGER
	FOREIGN KEY (Abnr) REFERENCES Abteilung (Abnr) \\ c 
	ON NO ACTION ON RESTRICT)
);	

//d
CREATE ASSERTION Assertgehalt(
	CHECK (
		
		(SELECT MAX(Gehalt) FROM Angestellte) =< (2 * (SELECT AVG(Gehalt) FROM Angestellte))	
	)
)


