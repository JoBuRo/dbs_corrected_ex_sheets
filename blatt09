a)
CREATE ASSERTION Assert1 (
	CHECK (
		x >= (SELECT Land, Count(Stadt)
		      FROM Stadt  AS s
		      WHERE Einwohner = (
					 SELECT MAX(Einwohner)
					 FROM Stadt
					 WHERE Land.lcode = s.LCode AND s.SNAME = Land.HStadt
					)
		     )
	)	
)

